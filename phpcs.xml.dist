<?xml version="1.0"?>
<ruleset name="Elve.dev">
    <description>Elve.dev Coding Standards</description>

    <!-- Scan all files in directory -->
    <file>src</file>

    <!-- Scan only PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="ns"/>

    <!-- Use PSR-2 as a base -->
    <rule ref="PSR12"/>
</ruleset>